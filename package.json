{
	"name": "phaser3-parcel-template",
	"version": "1.0.0",
	"description": "A typescript template project for Phaser 3 using Parceljs",
	"scripts": {
		"start": "parcel src/index.html -p 8000",
		"build": "parcel build src/index.html --out-dir dist",
		"tests": "mocha --require ts-node/register test/**/*.ts",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "supertommy",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ourcade/phaser3-parcel-template.git"
	},
	"homepage": "https://github.com/ourcade/phaser3-parcel-template",
	"devDependencies": {
		"@types/chai": "4.2.11",
		"@types/mocha": "7.0.2",
		"@types/node": "14.0.11",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"chai": "4.2.0",
		"eslint": "^8.2.0",
		"minimist": ">=1.2.2",
		"mocha": "7.2.0",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"ts-node": "8.10.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@types/crypto-js": "^4.0.1",
		"axios": "^0.21.1",
		"bitecs": "^0.3.17-1",
		"crypto-js": "^4.0.0",
		"fast-xml-parser": "^3.19.0",
		"phaser": "^3.50.1",
		"xml-js": "^1.6.11"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
